        Label:
            text: '[b][color=#000000]Data Nascimento[/color][/b]'
            size_hint_y: None
            height: 30
            markup: True
        
        TextInput:
            id: novo_data_nascimento
            size_hint: (0.8, None)
            pos_hint: {'center_x': 0.5}
            height: 29    

        Label:
            text: '[b][color=#000000]Email[/color][/b]'
            size_hint_y: None
            height: 30
            markup: True
        
        TextInput:
            id: novo_email
            size_hint: (0.8, None)
            pos_hint: {'center_x': 0.5}
            height: 29
        Label:
            text: '[b][color=#000000]Senha[/color][/b]'
            size_hint_y: None
            height: 30
            markup: True
        
        TextInput:
            id: novo_senha
            size_hint: (0.8, None)
            pos_hint: {'center_x': 0.5}
