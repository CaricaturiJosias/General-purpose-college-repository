<Inicial>    
    on_pre_enter: root.esvazia_campos()        
    FloatLayout:
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'wall2.jpg'

            Rectangle:
                source: 'petlogo2.png'
                size: 270,200
                pos: 15, 280

        Label:
            text: '[b][color=#000000]BEM-VINDO[/color][/b]'
            id: mensagem_inicial
            font_size: 15
            markup: True
            size_hint: 1, None
            height: 30
            pos_hint: {'center_x': 0.5, 'top': 0.525}
                    
        Label:
            text: '[b][color=#000000]Usuario[/color][/b]'
            size_hint: 1, None
            markup: True
            height: 30
            pos_hint: {'x': -0.33, 'top': 0.47}
            
        TextInput:
            id: usuario
            size_hint: 0.85, None
            height: 29
            pos_hint: {'center_x': 0.5, 'center_y': 0.40}
        
        Label:
            text: '[b][color=#000000]Senha[/color][/b]'
            markup: True
            size_hint: 1, None
            height: 30
            pos_hint: {'x': -0.35, 'center_y': 0.32}
            
        TextInput:
            id: senha
            size_hint: 0.85, None
            height: 29
            pos_hint: {'center_x': 0.5, 'center_y': 0.28}
                
        Button:
            text: '[b][color=#000000]Login[/color][/b]'
            markup: True
            on_release: root.btn_login()  
            size_hint: 0.38, None
            height: 40
            pos_hint: {'center_x': 0.3, 'center_y': 0.18}           
            background_normal: 'botnormal.png'
            background_down: 'botdown.png'   
            
        Button:
            text: '[b][color=#000000]Cadastro[/color][/b]'
            markup: True
            on_release: root.btn_cadastro()
            size_hint: 0.38, None
            height: 40
            pos_hint: {'center_x': 0.7, 'center_y': 0.18}     
            background_normal: 'botnormal.png'
            background_down: 'botdown.png'         
               
        Button:
            text: '[b][color=#000000]Sair[/color][/b]'
            markup: True
            on_release: app.stop()
            size_hint: 0.4, None
            height: 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.08}    
            background_normal: 'botnormal.png'
            background_down: 'botdown.png'   
                
<Cadastro>
    BoxLayout:
