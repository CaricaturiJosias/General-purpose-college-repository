<CadastroPet>
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'wall2.jpg'
        
        BoxLayout:
            orientation: 'vertical'
            size_hint_y:None
            height: 100        
            Label:
                text: '[b][color=#000000]NOVO[/color][/b]'
                font_size: 35
                markup: True
                size_hint_y: None
                height: 50
                
            Label:        
                text: '[b][color=#000000]PETINHO[/color][/b]'
                font_size: 35
                markup: True
                size_hint_y: None
                height: 50                         
        
        FloatLayout:
            size_hint_y:None
            height: 250
            
            canvas:
                Rectangle:
                    size: (100,150)
                    pos: (150, 200)
                    source: root.imagem_pet
            
            Spinner: 
                id: mudapet
                values: {'Cachorro', 'Gato'}
                text: 'Cachorro'
                markup: True
                size_hint: (None,None)
                height: 30
                width: 80
                pos_hint: {'center_y': 0.5, 'x': 0.1}
                background_normal: 'botnormal.png'
                background_down: 'botdown.png'
                on_text: root.mudaPet(mudapet.text)
                    
        BoxLayout:
            orientation: 'vertical'
            size_hint_y:None
            height: 150
            padding: 10
            spacing: 10
            
            Label:
                text: '[b][color=#000000]Nome do pet[/color][/b]'
                size_hint: 1, None
                markup: True
                height: 10
                pos_hint: {'x': -0.28, 'top': 0.47}
                
            TextInput:
                id: nomepet
                size_hint: 0.85, None
                height: 29
                pos_hint: {'center_x': 0.5, 'center_y': 0.40}            
            
            Button:
                text: '[b][color=#000000]Registrar[/color][/b]'
                markup: True
                background_normal: 'botnormal.png'
                background_down: 'botdown.png'
                on_release: root.btn_regpet()
                size_hint: (0.8, None)
                pos_hint: {'center_x': 0.5}
                height: 38            
            
            Button:
                text: '[b][color=#000000]Voltar[/color][/b]'
                markup: True
                background_normal: 'botnormal.png'
                background_down: 'botdown.png'
                on_release: root.btn_voltar()
                size_hint: (0.8, None)
                pos_hint: {'center_x': 0.5}
                height: 38                     
              